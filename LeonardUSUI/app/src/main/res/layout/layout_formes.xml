<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formes">

    <Button
        android:id="@+id/bouton0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/style_bouton_ripple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bouton1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bouton3"
        android:text="@string/polygones" />

    <Button
        android:id="@+id/bouton1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/style_bouton_ripple"
        app:layout_constraintLeft_toRightOf="@+id/bouton0"
        app:layout_constraintRight_toLeftOf="@+id/bouton2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bouton4"
        android:text="@string/ellipses" />

    <Button
        android:id="@+id/bouton2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/style_bouton_ripple"
        app:layout_constraintLeft_toRightOf="@id/bouton1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bouton5"
        android:text="@string/spirales" />

    <Button
        android:id="@+id/bouton3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/style_bouton_ripple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bouton4"
        app:layout_constraintTop_toBottomOf="@id/bouton0"
        app:layout_constraintBottom_toBottomOf="@id/bouton6"
        android:text="@string/parallelogrammes" />

    <Button
        android:id="@+id/bouton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/style_bouton_ripple"
        app:layout_constraintLeft_toRightOf="@+id/bouton3"
        app:layout_constraintRight_toLeftOf="@id/bouton5"
        app:layout_constraintTop_toBottomOf="@id/bouton1"
        app:layout_constraintBottom_toBottomOf="@id/bouton7"
        android:text="@string/emoji" />

    <Button
        android:id="@+id/bouton5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/style_bouton_ripple"
        app:layout_constraintLeft_toRightOf="@id/bouton4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bouton2"
        app:layout_constraintBottom_toBottomOf="@id/bouton8"
        android:text="@string/etoiles" />

    <Button
        android:id="@+id/bouton6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/style_bouton_ripple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bouton7"
        app:layout_constraintTop_toBottomOf="@id/bouton3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/autres" />

    <Button
        android:id="@+id/bouton7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/style_bouton_ripple"
        app:layout_constraintLeft_toRightOf="@+id/bouton6"
        app:layout_constraintRight_toLeftOf="@id/bouton8"
        app:layout_constraintTop_toBottomOf="@id/bouton4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/a_venir" />

    <Button
        android:id="@+id/bouton8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/style_bouton_ripple"
        app:layout_constraintLeft_toRightOf="@id/bouton7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bouton5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/a_venir" />
</android.support.constraint.ConstraintLayout>