<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/couverture"
    android:gravity="center"
    tools:context=".Main">

    <!--<VideoView
        android:id="@+id/couverture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="TODO" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_udes"/>

            <TextView
                android:id="@+id/nomRobot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leonard"
                android:textColor="@android:color/black"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/US"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/us"
                android:textColor="@color/UDeS"
                android:textSize="60sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_udes"/>
        </LinearLayout>

        <TextView
            android:id="@+id/nomEquipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/ingenierie_da_vinci" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/debut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/style_bouton_ripple"
            android:text="@string/allons_y" />
    </LinearLayout>
</RelativeLayout>
