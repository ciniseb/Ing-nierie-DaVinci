<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Telecommande">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:gravity="center|end"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="1 -" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center|end"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="0 -" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:gravity="center|end"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="-1 -" />

    <com.ingenieriedavinci.leonardusui.Manette
        android:id="@+id/manetteGauche"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="@drawable/layout_manette"
        android:padding="3dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="70dp"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.ingenieriedavinci.leonardusui.ImageViewCarre
            android:id="@+id/imageForme"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_forme"
            android:padding="9dp" />

        <Button
            android:id="@+id/boutonToggle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/style_bouton_toggle_ripple"
            android:contentDescription="Actionner le bras du crayon" />
    </LinearLayout>

    <com.ingenieriedavinci.leonardusui.Manette
        android:id="@+id/manetteDroite"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="@drawable/layout_manette"
        android:padding="3dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center|start"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="- 1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="center|start"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="- 0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center|start"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="- -1" />
</RelativeLayout>