<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle" >
            <corners android:radius="999dp" />
            <stroke
                android:width="6dp"
                android:color="@color/colorPrimaryDark"/>
            <gradient
                android:angle="90"
                android:centerColor="@color/couleurBoutonIn"
                android:endColor="@color/couleurBoutonOut"
                android:startColor="@color/couleurBoutonIn"
                android:type="radial"
                android:gradientRadius="250" />
        </shape>
    </item>
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle" >
            <corners android:radius="999dp" />
            <stroke
                android:width="3dp"
                android:color="@color/colorPrimary"/>
        </shape>
    </item>

</ripple>